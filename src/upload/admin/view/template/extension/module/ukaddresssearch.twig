{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ enable_status }}</label>
            <div class="col-sm-10">
              <select name="idealpostcodes_enabled" id="input-status" class="form-control">
                {% if idealpostcodes_enabled %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ api_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="idealpostcodes_api_key" value="{{ idealpostcodes_api_key }}" placeholder="{{ api_name }}" id="input-name" class="form-control" />
              {% if error_api_key %}
              <div class="text-danger">{{ error_api_key }}</div>
              {% endif %}
            </div>
          </div>
          <div class="tab-pane">
            <ul class="nav nav-tabs" id="settings">
              <li><a href="#options" data-toggle="tab">{{ tabs_options }}</a></li>
              <li><a href="#advanced" data-toggle="tab">{{ tabs_advanced }}</a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane" id="options">
                <!-- Autocomplete -->
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_autocomplete">{{ entry_autocomplete }}</label>
                  <div class="col-sm-10">
                    <select name="idealpostcodes_autocomplete" id="idealpostcodes_autocomplete" class="form-control">
                      {% if idealpostcodes_autocomplete %}
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                      {% else %}
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
                <!-- Postcode lookup -->
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_postcodelookup">{{ entry_postcodelookup }}</label>
                  <div class="col-sm-10">
                    <select name="idealpostcodes_postcodelookup" id="idealpostcodes_postcodelookup" class="form-control">
                      {% if idealpostcodes_postcodelookup %}
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                      {% else %}
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
                <!-- Populate organizaction -->
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_populate_organisation">{{ entry_organisation }}</label>
                  <div class="col-sm-10">
                    <select name="idealpostcodes_populate_organisation" id="idealpostcodes_populate_organisation" class="form-control">
                      {% if idealpostcodes_populate_organisation %}
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                      {% else %}
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
                <!-- Populate county -->
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_populate_county">{{ entry_county }}</label>
                  <div class="col-sm-10">
                    <select name="idealpostcodes_populate_county" id="idealpostcodes_populate_county" class="form-control">
                      {% if idealpostcodes_populate_county %}
                        <option value="1" selected="selected">{{ text_enabled }}</option>
                        <option value="0">{{ text_disabled }}</option>
                      {% else %}
                        <option value="1">{{ text_enabled }}</option>
                        <option value="0" selected="selected">{{ text_disabled }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>
              </div>
              <div class="tab-pane" id="advanced">
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_postcodelookup_override">{{ entry_postcodelookup_override }}</label>
                  <div class="col-sm-10">
                    <textarea name="idealpostcodes_postcodelookup_override" placeholder="{{ entry_postcodelookup_override }}" id="idealpostcodes_postcodelookup_override" class="form-control">{{ idealpostcodes_postcodelookup_override }}</textarea>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_autocomplete_override">{{ entry_autocomplete_override }}</label>
                  <div class="col-sm-10">
                    <textarea name="idealpostcodes_autocomplete_override" placeholder="{{ entry_autocomplete_override }}" id="idealpostcodes_autocomplete_override" class="form-control">{{ idealpostcodes_autocomplete_override }}</textarea>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="idealpostcodes_custom_fields">{{ entry_custom_fields }}</label>
                  <div class="col-sm-10">
                    <textarea name="idealpostcodes_custom_fields" placeholder="[]" id="idealpostcodes_custom_fields" class="form-control">{{ idealpostcodes_custom_fields }}</textarea>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script type="text/javascript"><!--
$('#settings a:first').tab('show');
//--></script></div>
{{ footer }}
